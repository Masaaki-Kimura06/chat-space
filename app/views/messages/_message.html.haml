
.content{data: {message: {id: message.id}}}
  %span.chat-main__message-list__name
    = message.user.name
  %span.chat-main__message-list__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.chat-main__message-list__text
    - if message.body.present?
      = message.body
  = image_tag message.image.url, class: 'chat-main__message-list__image' if message.image.present?