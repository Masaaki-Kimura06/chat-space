.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__edit-user
          = link_to new_group_path do
            = icon("far", "far fa-edit", class: "fa-pull-right")
        %li.top-items__icons__edit-account
          =  link_to edit_user_path(current_user) do
            = icon("fas", "fas fa-cog", class: "fa-pull-right")      
  .side-bar__group-lists
    - current_user.groups.each do |group|
      .side-bar__group-list
        = link_to "#" do
          .side-bar__group-list__group-name
            = group.name
          .side-bar__group-list__latest-message
            メッセージはまだありません  
 